{
  "name": "express-crud",
  "version": "1.0.0",
  "description": "Simple REST API CRUD using Express",
  "main": "src/main.ts",
  "author": "Mathias Artur Schulz",
  "license": "MIT",
  "engines": {
    "node": ">=22.11.0",
    "yarn": ">=1.22.22"
  },
  "scripts": {
